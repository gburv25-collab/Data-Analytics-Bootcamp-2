import pandas as pd
import matplotlib.pyplot as plt

# 1. Load data
df = pd.read_csv("Retail_Sales_2024.csv", parse_dates=["Date"])

# 2. Create Revenue
df["Revenue"] = df["Quantity"] * df["Price"] * (1 - df["Discount_Rate"])

cat_rev = df.groupby("Category")["Revenue"].sum().sort_values()

# Question 1: Which product categories perform best?
plt.figure()
cat_rev.plot(kind="bar")
plt.title("Total Revenue by Category")
plt.ylabel("Revenue")
plt.xlabel("Category")
plt.tight_layout()
plt.show()
# To answer: Which bar is highest? How big is the gap between top and bottom category?

#Question 2: How do monthly sales patterns change?
# Create a monthly series
monthly_rev = df.set_index("Date").resample("M")["Revenue"].sum()

plt.figure()
monthly_rev.plot()
plt.title("Monthly Revenue Trend â€“ 2024")
plt.ylabel("Revenue")
plt.xlabel("Month")
plt.tight_layout()
plt.show()
